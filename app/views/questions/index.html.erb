<h3>Interview questions</h3>

<table>
  <tbody>
    <% @questions.each_with_index do |question, index| %>
      <tr>
        <td><%= format("%d.", index+1) %></td>
        <td><%= question.question %></td>
        <td><%= link_to 'Edit', edit_question_path(question), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Delete', question, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ Create a new question', new_question_path, class: "btn btn-primary" %>
