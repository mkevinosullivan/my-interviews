<h3>Job Postings</h3>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th># Candidates</th>
      <th># Interviews completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_postings.each do |job_posting| %>
      <tr>
        <td><%= job_posting.description %><br><%= link_to 'link to external job posting', job_posting.posting_link %></td>
        <td><%= job_posting.candidates.size %></td>
        <td>
          <% if responses_for_job_posting = Response.where(job_posting_id: job_posting.id) %>
            <%= responses_for_job_posting.select(:candidate_id).distinct.size %>
          <% else %>
            0
          <% end %>
        </td>
        <td><%= link_to 'Show', job_posting, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_job_posting_path(job_posting), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Delete', job_posting, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ create a new job posting', new_job_posting_path, class: "btn btn-primary" %>
