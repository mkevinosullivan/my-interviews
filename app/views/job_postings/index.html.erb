<p id="notice"><%= notice %></p>

<h1>Job Postings</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th># Candidates</th>
      <th># Interviews completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_postings.each do |job_posting| %>
      <tr>
        <td><%= job_posting.description %><br><%= link_to 'Job posting link', job_posting.posting_link %></td>
        <td><%= job_posting.candidates.size %></td>
        <td>
          <% if responses_for_job_posting = Response.where(job_posting_id: job_posting.id) %>
            <%= responses_for_job_posting.select(:candidate_id).distinct.size %>
          <% else %>
            0
          <% end %>
        </td>
        <td><%= link_to 'Show', job_posting %></td>
        <td><%= link_to 'Edit', edit_job_posting_path(job_posting) %></td>
        <td><%= link_to 'Destroy', job_posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Posting', new_job_posting_path %>
