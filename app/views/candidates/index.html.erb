<p id="notice"><%= notice %></p>

<h1>Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Candidate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= link_to format('%s %s (%s)', candidate.first_name, candidate.last_name, candidate.email), candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% if @candidates.joins(:responses).find_by('responses.candidate_id' => candidate.id).blank? %>
            <%= link_to 'Start interview', interview_path(candidate_id: candidate.id) %>
          <% else %>
            Interview complete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Candidate', new_candidate_path %>
