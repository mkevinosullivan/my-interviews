<h3>Candidates</h3>

<div class="container-fluid">
  <% @candidates.each do |candidate| %>
    <div class="row candidate-row">
      <div>
        <%= link_to edit_candidate_path(candidate) do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <div>
        <%= link_to candidate, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="text-danger">
            <i class="fas fa-trash-alt"></i>
          </span>
        <% end %>
      </div>
      <div class="candidate">
        <%= format('%s %s (%s)', candidate.first_name, candidate.last_name, candidate.email) %>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to new_candidate_path do %>
  <span class="btn btn-sm btn-primary">
    <i class="fas fa-plus-square"></i> add a new candidate
  </span>
<% end %>


