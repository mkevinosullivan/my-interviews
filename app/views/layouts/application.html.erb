<!DOCTYPE html>
<html>
  <head>
    <title>MyInterviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/6caed0721b.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="container mt-2">
      <div class="row">
        <div class="col-md-3">
          <%= render "shared/side_menu" %>
        </div><!-- .col-md-3 -->
        <div class="col">
          <%= render "shared/message" %>
          <%= yield %>
        </div> <!-- .col -->
      </div> <!-- .row -->
    </div> <!-- .container mt-2 -->
  </body>
</html>
