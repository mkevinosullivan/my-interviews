<!DOCTYPE html>
<html>
  <head>
    <title>MyInterviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="container mt-2">
      <div class="row">
        <div class="col-md-2">
          <p><%= link_to 'Job Postings', job_postings_path %></p>
          <p><%= link_to 'Questionnaires', questionnaires_path %></p>
          <p><%= link_to 'Questions', questions_path %></p>
          <p><%= link_to 'Candidates', candidates_path %></p>
        </div><!-- .col-md-2 -->
        <div class="col">
          <%= render "shared/message" %>
          <%= yield %>
        </div> <!-- .col -->
      </div> <!-- .row -->
    </div> <!-- .container mt-2 -->
  </body>
</html>
